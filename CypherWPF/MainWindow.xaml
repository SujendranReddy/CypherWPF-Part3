<Window x:Class="CypherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cypher - Your Cybersecurity Companion"
        Height="700" Width="900"
        Background="#1a1a1a"
        WindowStartupLocation="CenterScreen">

    <!-- common brushes and styles -->
    <Window.Resources>
        <!-- Colours -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4A90E2"/>
        <SolidColorBrush x:Key="AccentBrush"  Color="#6A5ACD"/>
        <SolidColorBrush x:Key="WarnBrush"    Color="#DC143C"/>
        <SolidColorBrush x:Key="BgBrush"      Color="#2d2d2d"/>
        <SolidColorBrush x:Key="InputBrush"   Color="#3d3d3d"/>
        <SolidColorBrush x:Key="TextBrush"    Color="#FFFF00"/>

        <!-- Button Styles -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFFFFF" BlurRadius="10" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Styles -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource InputBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <!-- Layout Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Banner -->
        <TextBlock Grid.Row="0"
                   x:Name="BannerText"
                   Text="Cypher Chatbot"
                   FontFamily="Consolas"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <!-- Chat Display -->
        <Border Grid.Row="1"
                Background="{StaticResource BgBrush}"
                CornerRadius="8"
                Padding="5">
            <ScrollViewer x:Name="ChatScrollViewer"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChatPanel"/>
            </ScrollViewer>
        </Border>

        <!-- Input Section -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputTextBox"
                     Grid.Column="0"
                     IsEnabled="False"
                     KeyDown="InputTextBox_KeyDown"/>

            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="Send"
                    IsEnabled="False"
                    Click="SendButton_Click"/>
        </Grid>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button x:Name="HelpButton"
                    Content="Help"
                    Background="{StaticResource AccentBrush}"
                    Click="HelpButton_Click"/>
            <Button x:Name="ExitButton"
                    Content="Exit"
                    Background="{StaticResource WarnBrush}"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
