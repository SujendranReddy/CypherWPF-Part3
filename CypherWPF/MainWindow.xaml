<Window x:Class="CypherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cypher - Your Cybersecurity Companion" Height="700" Width="900"
        Background="#1a1a1a" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Banner -->
        <TextBlock Grid.Row="0" x:Name="BannerText" 
                   FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                   Foreground="#4A90E2" HorizontalAlignment="Center"
                   Margin="10" TextAlignment="Center"/>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      Background="#2d2d2d" Margin="10">
            <StackPanel x:Name="ChatPanel" Margin="10"/>
        </ScrollViewer>

        <!-- Input Section -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputTextBox" Grid.Column="0"
                     Background="#3d3d3d" Foreground="#FFFF00" 
                     FontSize="14" Padding="10" BorderThickness="2"
                     BorderBrush="#4A90E2" KeyDown="InputTextBox_KeyDown"
                     IsEnabled="False"/>

            <Button x:Name="SendButton" Grid.Column="1" Content="Send"
                    Background="#4A90E2" Foreground="White" 
                    Padding="15,10" Margin="5,0,0,0" 
                    Click="SendButton_Click" IsEnabled="False"/>
        </Grid>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="HelpButton" Content="Help" 
                    Background="#6A5ACD" Foreground="White"
                    Padding="10,5" Margin="5" Click="HelpButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit"
                    Background="#DC143C" Foreground="White" 
                    Padding="10,5" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>